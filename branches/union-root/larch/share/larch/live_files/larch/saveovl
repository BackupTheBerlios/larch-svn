session_save ()
{
    savepath=/.livesys/medium
    overlay=overlay.ovl

    dontask=""
    backup="yes"
    fail=""

    if [ -f ${savepath}/larch/session-save ]; then
        . ${savepath}/larch/session-save
    fi

    if [ -n "${savedev}" ] && [ -f ${savepath}/larch/save ]; then
        if [ -f ${savepath}/larch/save-menu ]; then
            . ${savepath}/larch/save-menu
        elif [ -z "${dontask}" ]; then
            echo
            echo "============= Session Saving ============="
            echo
            echo "Please select:"
            echo "--------------"
            echo
            echo "    <Enter>: Save overlay, with backup of old overlay"
            echo "  1 <Enter>: Save overlay, removing old overlay"
            echo "  2 <Enter>: No session saving"
            read -p "Choice? :" choice
            case ${choice} in
                1 ) backup="" ;;
                2 ) savedev="" ;;
                * ) ;;
            esac
        fi

        if [ -n "${savedev}" ]; then
            saveovl
        fi

    fi
}


# The variables 'savepath' (save folder), 'overlay' (file name) and
# 'backup' (non-empty => backup existing file) are passed as environment
# variables. The value of 'savepath' may be overridden by passing it as
# (optional) argument.

saveovl ()
{
    if [ -n "$1" ]; then
        savepath=$1
    fi

    if ! [ -d "${savepath}" ]; then
        echo "ERROR: no 'savepath' folder"
        echo "Usage:"
        echo "   saveovl path/to/folder"
        return 1
    fi

    if [ -z "${overlay}" ]; then
        overlay=overlay.ovl
    fi

    savedirs='overlay/etc'
    for d in bin boot home larch lib mnt opt root sbin srv usr var; do
        if [ -d /.livesys/overlay/${d} ]; then
            savedirs="${savedirs} overlay/${d}"
        fi
    done

    mount -o remount,rw ${savepath} &>/dev/null

    if [ -f ${savepath}/${overlay} ]; then
        if [ -n "${backup}" ]; then
            mv -f ${savepath}/${overlay} ${savepath}/${overlay}~
        else
            rm -f ${savepath}/${overlay}
            rm -f ${savepath}/${overlay}~
        fi
    fi
    tar -cf - --exclude=overlay/var/log -C /.livesys ${savedirs} | \
            lzop > ${savepath}/${overlay}
    if [ $? -ne 0 ]; then
        echo "ERROR: couldn't save overlay"
        rm -f ${savepath}/${overlay}
        if [ -f ${savepath}/${overlay}~ ]; then
            mv -f ${savepath}/${overlay}~ ${savepath}/${overlay}
        else
            echo "WARNING: no backup overlay in ${savepath}!!"
        fi
        return 1
    fi

    return 0
}
