timeout 5
default 0
color light-blue/blue black/light-grey
splashimage=/boot/splash.xpm.gz

title larch live CD for 'gradplay' installation
kernel /boot/vmlinuz ro
initrd /boot/larch.img

title larch-gp copy-to-ram (also activates swap)
kernel /boot/vmlinuz ro c2r
initrd /boot/larch.img

title larch-gp with swap
kernel /boot/vmlinuz ro swap
initrd /boot/larch.img

title Tools...
configfile /boot/grub/tools.lst

title Grub Settings...
configfile /boot/grub/settings.lst

title View Help...
configfile /boot/grub/help.lst

title More Options...
configfile /boot/grub/more.lst

title  Shutdown the Computer
halt

title  Reboot the Computer
reboot

